{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ESNext", "dom"],
    "downlevelIteration": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
    },
    "types": ["node"],
    "esModuleInterop": true
  }
}
